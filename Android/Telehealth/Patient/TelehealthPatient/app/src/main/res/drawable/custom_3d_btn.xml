<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Top 1dp Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#248349" />
                    <corners android:radius="7dp" />
                </shape>
            </item>
            <!-- Light bottom color -->
            <item android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#2AB564" />
                    <corners android:radius="7dp" />
                    <stroke android:width="1px" android:color="#248349" />
                    <padding android:bottom="36dp" android:top="28dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <!-- Bottom 3dp Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#22A863" />
                    <corners android:radius="7dp" />
                </shape>
            </item>
            <!-- Light top color -->
            <item android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="#2DCC70" />
                    <corners android:radius="7dp" />
                    <stroke android:width="1px" android:color="#22A863" />
                    <padding android:bottom="28dp" android:top="36dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>